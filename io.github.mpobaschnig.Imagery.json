{
    "id" : "io.github.mpobaschnig.Imagery",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "imagery",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "build-aux/python3-transformers.json",
        "build-aux/python3-diffusers.json",
    	"build-aux/python3-torch.json",
        "build-aux/python3-accelerate.json",
        "build-aux/python3-scipy.json",
        {
            "name": "nvidia-smi",
            "buildsystem": "simple",
            "build-commands": [
                "install nvidia-smi-wrapper.sh /app/bin/nvidia-smi"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "build-aux/nvidia-smi-wrapper.sh"
                }
            ]
        },
        {
            "name": "test",
            "buildsystem": "simple",
            "build-commands": [
                "install test.py /app/bin/test"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "build-aux/test.py"
                }
            ]
        },
        {
            "name" : "imagery",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/mpobaschnig/Projects"
                }
            ]
        }
    ]
}
